{
	"name": "gioconda.cl",
	"description": "Explora el arte de Gioconda",
	"version": "1.0.0",
	"scripts": {
		"start": "budo src/index.js",
		"build": "mkdir -p dist/res && mkdir -p dist/images && browserify -p tinyify src/index.js | htmlify base.html > dist/build.html && cp -r res/*.jpg dist/res && cp -r images/*.jpg dist/images",
		"serve": "http-server dist -p 8080",
		"clean": "rm -rf dist"
	},
	"license": "MIT",
	"dependencies": {
		"@babel/runtime": "^7.26.0",
		"babel-core": "7.0.0-bridge.0",
		"gl-mat4": "^1.2.0",
		"gl-vec3": "^1.1.3",
		"pointer-lock": "^0.0.4",
		"regl": "^2.1.0",
		"stats.js": "^0.17.0"
	},
	"devDependencies": {
		"@babel/core": "^7.26.0",
		"@babel/plugin-transform-runtime": "^7.25.9",
		"@babel/preset-env": "^7.26.0",
		"babelify": "^10.0.0",
		"browserify": "^17.0.1",
		"budo": "^11.8.4",
		"inline-htmlify": "^1.0.2",
		"tinyify": "^3.1.0",
		"uglify-js": "^3.19.3"
	},
	"browserify": {
		"transform": [
			"babelify"
		]
	}
}
